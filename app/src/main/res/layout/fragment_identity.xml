<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_layout"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/abc_text_size_display_3_material" />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/identity_icon"
            android:src="@drawable/male12" />

        <TextView
            android:id="@+id/timestamp_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/uid"
            android:text="@string/registration_date"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/abc_text_size_caption_material" />

        <TextView
            android:id="@+id/timestamp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timestamp_label"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Dec 12, 2014"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/abc_text_size_subhead_material" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signature_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signature"
            android:textSize="@dimen/abc_text_size_caption_material" />

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textIsSelectable="true"
            android:textSize="@dimen/abc_text_size_subhead_material" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_key"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <TextView
            android:id="@+id/pubkey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:singleLine="false"
            android:textSize="@dimen/abc_text_size_subhead_material"/>

        <!-- Search progress -->
        <ProgressBar
            android:id="@+id/load_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <ExpandableListView
            android:id="@+id/wot_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scrollbarStyle="outsideOverlay" />
    </LinearLayout>
</LinearLayout>

