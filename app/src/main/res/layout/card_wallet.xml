<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:background="@color/primaryDark">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:listPreferredItemHeight"
        android:gravity="center_vertical"
        android:duplicateParentState="true"
        android:paddingLeft="0dp"
        android:paddingRight="8dp"
        android:layout_margin="0dp">

        <ImageView
            android:src="@drawable/ic_user_32dp"
            android:id="@+id/icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:duplicateParentState="true"
            android:background="@drawable/shape_item_wallet" />

        <LinearLayout
            android:duplicateParentState="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/icon"
            android:layout_toEndOf="@+id/icon"
            android:baselineAligned="false">

            <LinearLayout
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.6"
                android:layout_width="0dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:text="name"
                    style="@style/ListItemHead"/>

                <TextView
                    android:id="@+id/uid"
                    android:layout_width="match_parent"
                    android:text="name"
                    style="@style/ListItemSubhead"/>

                <TextView
                    android:id="@+id/pubkey"
                    android:text="G2CBgZBPLe6FSFUgpx2Jf1Aqsgta6iib3vmDRA1yLiqU"
                    android:layout_width="wrap_content"
                    style="@style/ListItemSubhead"
                    android:maxWidth="@dimen/list_item_max_width_pubkey"/>
            </LinearLayout>

            <LinearLayout
                android:duplicateParentState="true"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.4"
                android:layout_width="0dp">

                <TextView
                    android:id="@+id/credit"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/secondary_text_default_material_light"
                    android:layout_gravity="top"
                    android:text="credit"
                    android:textSize="16sp"
                    android:elegantTextHeight="false"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/currency"
                    android:duplicateParentState="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/hideable_text_color"
                    android:gravity="end"
                    android:layout_gravity="bottom|right"
                    android:text="currency"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>