<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FormItem"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        style="@style/FormLabel"
        android:text="Wallet (sender)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        style="@style/FormText"
        android:id="@+id/senderUid"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="main wallet"
        android:maxLines="1"
        />

    <TextView
        style="@style/FormLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="To"
        />

    <EditText
        style="@style/FormText"
        android:id="@+id/receiverUid"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="receiver uid"
        android:maxLines="1"
        />


    <TextView
        style="@style/FormLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Amount"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            style="@style/FormText"
            android:id="@+id/amount"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:ems="12"
            android:text=""
            android:maxLines="1"
            android:layout_gravity="bottom"
            />

        <TextView
            style="@style/FormLabel.Suffix"
            android:id="@+id/amount_unit_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/unit_coins_label"
            android:gravity="center_vertical|center_horizontal" />


    </LinearLayout>

    <ImageView
        android:id="@+id/toggle_unit_button"
        android:src="@drawable/ic_two_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingEnd="22dp"
        android:paddingStart="22dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/FormText"
            android:id="@+id/converted_amount"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:text=""
            android:maxLines="1"
            android:layout_gravity="bottom"
            android:ems="12" />

        <TextView
            style="@style/FormLabel.Suffix"
            android:id="@+id/converted_amount_unit_text"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/unit_ud_label"
            android:gravity="center_vertical|center_horizontal"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_transfer"
        android:id="@+id/transfer_button"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/coins32"
        android:drawablePadding="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginTop="50dp"
        />


    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone"
        android:layout_gravity="center_horizontal|center_vertical"/>


</LinearLayout>
