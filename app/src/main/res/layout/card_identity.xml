<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:background="@color/primaryDark">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:duplicateParentState="true">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_user_32dp"
                android:id="@+id/icon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:duplicateParentState="true"
                android:background="@drawable/shape_item_identity" />

            <TextView
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:text="name"
                style="@style/ListItemHead"
                android:layout_alignTop="@+id/icon"
                android:layout_toRightOf="@+id/icon"
                android:layout_toEndOf="@+id/icon"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:text="name"
                style="@style/ListItemSubhead"
                android:layout_below="@+id/uid"
                android:layout_alignLeft="@+id/uid"
                android:layout_alignStart="@+id/uid"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/more_information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar_grey"/>

                <TextView
                    android:id="@+id/txt_inscription"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:singleLine="true"
                    android:text="@string/registration_date"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="18dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_key_grey"/>

                <TextView
                    android:id="@+id/pubkey"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:singleLine="true"
                    android:text="G2CBgZBPLe6FSFUgpx2Jf1Aqsgta6iib3vmDRA1yLiqU"
                    android:maxWidth="@dimen/list_item_max_width_pubkey"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="18dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ic_signature_grey"/>

                <TextView
                    android:id="@+id/info_certify"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:singleLine="true"
                    android:text="@string/certify_by"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="4dp"
                card_view:cardBackgroundColor="@android:color/darker_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/button_pay"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_payment_grey"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/transfer"
                            android:gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_certify"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_certify"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_certificate_white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_to"
                            android:gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_operation"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_operation_white"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/transactions"
                            android:gravity="center_horizontal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_certification"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_action_certify"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/certify"
                            android:gravity="center_horizontal"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <RelativeLayout android:id="@+id/more_button"
                        android:layout_height="25dp" android:layout_width="fill_parent"
                        android:background="@xml/footer_card_wallet"
                        android:layout_alignParentBottom="true">
            <TextView android:id="@+id/more_button_txt"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textColor="@android:color/white"
                      android:textStyle="bold"
                      android:paddingRight="5dp"
                      android:paddingLeft="5dp"
                      android:layout_alignParentRight="true">
            </TextView>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>