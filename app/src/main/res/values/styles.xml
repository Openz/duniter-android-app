<resources>
    <color name="theme_color">#b0b0ff</color>
    <integer name="fragment_animation_time">500</integer>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- ActionBar styles
    <style name="AppActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    </style>
    -->

    <style name="FormItem">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Header">
        <item name="android:background">@color/primary</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingBottom">16sp</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="FormLabel.Suffix">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormText">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="FormText.Editable">

    </style>

    <style name="FormText.Computed">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#0099CC</item>
    </style>

    <style name="FormButton">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
